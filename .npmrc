# SwiftFill npm Configuration
# Created: November 23, 2025
# Purpose: Resolve React 19 peer dependency conflicts in CI/CD

# Enable legacy peer dependency resolution
# Required because @liquid-justice/design-system uses React 18
# while SwiftFill uses React 19
legacy-peer-deps=true

# Strict engine checking (enforce Node.js version)
engine-strict=false

# Save exact versions in package.json
save-exact=false

# Audit level (show vulnerabilities)
audit-level=moderate

