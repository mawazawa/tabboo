{
  "$schema": "https://design-tokens.org/schemas/2025.10/tokens.json",
  "$version": "1.0.0",
  "$type": "design-tokens",
  "$description": "SwiftFill W3C Design Tokens v1.0 - Three-tier hierarchy (foundation → alias → component) following October 2025 specification",

  "$extensions": {
    "swiftfill": {
      "lastUpdated": "2025-01-18",
      "philosophy": "iOS Purist with innovations exceeding Apple standards",
      "compatibleWith": ["web", "ios", "android"],
      "generatedFrom": "design-system.json v2.0.0"
    }
  },

  "foundation": {
    "$type": "group",
    "$description": "Tier 1: Raw, platform-agnostic values with no semantic meaning. These are the atomic building blocks.",

    "color": {
      "$type": "group",

      "blue": {
        "$type": "group",
        "50": { "$type": "color", "$value": "hsl(220, 25%, 97%)", "$description": "Lightest blue for backgrounds" },
        "100": { "$type": "color", "$value": "hsl(220, 23%, 92%)" },
        "200": { "$type": "color", "$value": "hsl(220, 20%, 84%)" },
        "300": { "$type": "color", "$value": "hsl(220, 18%, 72%)" },
        "400": { "$type": "color", "$value": "hsl(220, 15%, 60%)" },
        "500": { "$type": "color", "$value": "hsl(215, 85%, 50%)", "$description": "Primary brand blue" },
        "600": { "$type": "color", "$value": "hsl(215, 85%, 45%)" },
        "700": { "$type": "color", "$value": "hsl(215, 80%, 38%)" },
        "800": { "$type": "color", "$value": "hsl(215, 75%, 30%)" },
        "900": { "$type": "color", "$value": "hsl(220, 13%, 13%)", "$description": "Almost black with blue tint" },
        "950": { "$type": "color", "$value": "hsl(220, 18%, 8%)", "$description": "Darkest blue for dark mode backgrounds" }
      },

      "gray": {
        "$type": "group",
        "50": { "$type": "color", "$value": "hsl(0, 0%, 97%)" },
        "100": { "$type": "color", "$value": "hsl(220, 15%, 94%)" },
        "200": { "$type": "color", "$value": "hsl(220, 15%, 90%)" },
        "300": { "$type": "color", "$value": "hsl(220, 15%, 88%)" },
        "400": { "$type": "color", "$value": "hsl(220, 15%, 70%)" },
        "500": { "$type": "color", "$value": "hsl(220, 10%, 35%)" },
        "600": { "$type": "color", "$value": "hsl(220, 13%, 25%)" },
        "700": { "$type": "color", "$value": "hsl(220, 15%, 20%)" },
        "800": { "$type": "color", "$value": "hsl(220, 18%, 11%)" },
        "900": { "$type": "color", "$value": "hsl(220, 13%, 13%)" }
      },

      "red": {
        "$type": "group",
        "500": { "$type": "color", "$value": "hsl(0, 84%, 60%)", "$description": "Error red" },
        "600": { "$type": "color", "$value": "hsl(0, 72%, 51%)" }
      },

      "green": {
        "$type": "group",
        "500": { "$type": "color", "$value": "hsl(142, 76%, 36%)", "$description": "Success green" }
      },

      "yellow": {
        "$type": "group",
        "500": { "$type": "color", "$value": "hsl(38, 92%, 50%)", "$description": "Warning yellow" }
      },

      "cyan": {
        "$type": "group",
        "500": { "$type": "color", "$value": "hsl(199, 89%, 48%)", "$description": "Info cyan" }
      },

      "white": {
        "$type": "color",
        "$value": "hsl(0, 0%, 100%)",
        "$description": "Pure white"
      }
    },

    "spacing": {
      "$type": "group",
      "$description": "8px base unit grid system (Apple HIG compliant)",
      "0": { "$type": "dimension", "$value": "0rem" },
      "1": { "$type": "dimension", "$value": "0.25rem", "$description": "4px" },
      "2": { "$type": "dimension", "$value": "0.5rem", "$description": "8px - base unit" },
      "2.5": { "$type": "dimension", "$value": "0.625rem", "$description": "10px" },
      "3": { "$type": "dimension", "$value": "0.75rem", "$description": "12px" },
      "4": { "$type": "dimension", "$value": "1rem", "$description": "16px" },
      "5": { "$type": "dimension", "$value": "1.25rem", "$description": "20px" },
      "6": { "$type": "dimension", "$value": "1.5rem", "$description": "24px" },
      "8": { "$type": "dimension", "$value": "2rem", "$description": "32px" },
      "10": { "$type": "dimension", "$value": "2.5rem", "$description": "40px" },
      "11": { "$type": "dimension", "$value": "2.75rem", "$description": "44px - touch target minimum" },
      "12": { "$type": "dimension", "$value": "3rem", "$description": "48px" },
      "16": { "$type": "dimension", "$value": "4rem", "$description": "64px" },
      "20": { "$type": "dimension", "$value": "5rem", "$description": "80px" },
      "24": { "$type": "dimension", "$value": "6rem", "$description": "96px" }
    },

    "font-size": {
      "$type": "group",
      "xs": { "$type": "dimension", "$value": "0.75rem", "$description": "12px" },
      "sm": { "$type": "dimension", "$value": "0.875rem", "$description": "14px" },
      "base": { "$type": "dimension", "$value": "1rem", "$description": "16px" },
      "lg": { "$type": "dimension", "$value": "1.125rem", "$description": "18px" },
      "xl": { "$type": "dimension", "$value": "1.25rem", "$description": "20px" },
      "2xl": { "$type": "dimension", "$value": "1.5rem", "$description": "24px" },
      "3xl": { "$type": "dimension", "$value": "1.875rem", "$description": "30px" },
      "4xl": { "$type": "dimension", "$value": "2.25rem", "$description": "36px" },
      "5xl": { "$type": "dimension", "$value": "3rem", "$description": "48px" }
    },

    "font-weight": {
      "$type": "group",
      "light": { "$type": "number", "$value": 300 },
      "normal": { "$type": "number", "$value": 400 },
      "medium": { "$type": "number", "$value": 500 },
      "semibold": { "$type": "number", "$value": 600 },
      "bold": { "$type": "number", "$value": 700 },
      "extrabold": { "$type": "number", "$value": 800 }
    },

    "line-height": {
      "$type": "group",
      "tight": { "$type": "number", "$value": 1.25 },
      "normal": { "$type": "number", "$value": 1.5 },
      "relaxed": { "$type": "number", "$value": 1.75 }
    },

    "border-radius": {
      "$type": "group",
      "none": { "$type": "dimension", "$value": "0" },
      "sm": { "$type": "dimension", "$value": "0.25rem", "$description": "4px" },
      "md": { "$type": "dimension", "$value": "0.5rem", "$description": "8px" },
      "lg": { "$type": "dimension", "$value": "0.75rem", "$description": "12px" },
      "xl": { "$type": "dimension", "$value": "1rem", "$description": "16px" },
      "2xl": { "$type": "dimension", "$value": "1.5rem", "$description": "24px" },
      "full": { "$type": "dimension", "$value": "9999px", "$description": "Pill shape" }
    },

    "shadow": {
      "$type": "group",
      "$description": "5-layer physics-based shadow system (exceeds Apple's 3-layer)",

      "sm": {
        "$type": "shadow",
        "$value": {
          "offsetX": "0px",
          "offsetY": "1px",
          "blur": "2px",
          "spread": "0px",
          "color": "hsl(220, 13%, 13%, 0.08)"
        }
      },

      "ultra-5layer": {
        "$type": "shadow",
        "$value": [
          {
            "offsetX": "0px",
            "offsetY": "0.5px",
            "blur": "1px",
            "spread": "0px",
            "color": "hsl(220, 13%, 13%, 0.04)",
            "$description": "Contact shadow"
          },
          {
            "offsetX": "0px",
            "offsetY": "1px",
            "blur": "2px",
            "spread": "0px",
            "color": "hsl(220, 13%, 13%, 0.08)",
            "$description": "Key light"
          },
          {
            "offsetX": "0px",
            "offsetY": "2px",
            "blur": "4px",
            "spread": "0px",
            "color": "hsl(220, 13%, 13%, 0.12)",
            "$description": "Ambient occlusion"
          },
          {
            "offsetX": "0px",
            "offsetY": "4px",
            "blur": "8px",
            "spread": "0px",
            "color": "hsl(220, 13%, 13%, 0.16)",
            "$description": "Penumbra"
          },
          {
            "offsetX": "0px",
            "offsetY": "8px",
            "blur": "16px",
            "spread": "0px",
            "color": "hsl(220, 13%, 13%, 0.08)",
            "$description": "Atmospheric glow"
          }
        ]
      }
    },

    "blur": {
      "$type": "group",
      "$description": "7-level liquid glass material system (exceeds Apple's 4-level)",
      "ultra-thin": { "$type": "dimension", "$value": "4px" },
      "thin": { "$type": "dimension", "$value": "8px" },
      "regular": { "$type": "dimension", "$value": "12px" },
      "thick": { "$type": "dimension", "$value": "16px" },
      "chrome": { "$type": "dimension", "$value": "24px" },
      "ultra-chrome": { "$type": "dimension", "$value": "32px" },
      "liquid-distortion": { "$type": "dimension", "$value": "20px", "$description": "With SVG filter" }
    },

    "duration": {
      "$type": "group",
      "instant": { "$type": "duration", "$value": "0ms" },
      "fast": { "$type": "duration", "$value": "150ms" },
      "normal": { "$type": "duration", "$value": "300ms" },
      "slow": { "$type": "duration", "$value": "500ms" }
    },

    "cubic-bezier": {
      "$type": "group",
      "spring": { "$type": "cubicBezier", "$value": [0.34, 1.56, 0.64, 1], "$description": "Apple-style spring animation" },
      "smooth": { "$type": "cubicBezier", "$value": [0.4, 0, 0.2, 1], "$description": "Material Design easing" },
      "snappy": { "$type": "cubicBezier", "$value": [0.4, 0, 0.1, 1], "$description": "Fast, responsive" }
    },

    "opacity": {
      "$type": "group",
      "0": { "$type": "number", "$value": 0 },
      "5": { "$type": "number", "$value": 0.05 },
      "10": { "$type": "number", "$value": 0.1 },
      "20": { "$type": "number", "$value": 0.2 },
      "40": { "$type": "number", "$value": 0.4 },
      "60": { "$type": "number", "$value": 0.6 },
      "80": { "$type": "number", "$value": 0.8 },
      "90": { "$type": "number", "$value": 0.9 },
      "95": { "$type": "number", "$value": 0.95 },
      "100": { "$type": "number", "$value": 1 }
    }
  },

  "alias": {
    "$type": "group",
    "$description": "Tier 2: Semantic tokens that map foundation tokens to specific roles and contexts. These introduce meaning.",

    "color": {
      "$type": "group",

      "text": {
        "$type": "group",
        "primary": { "$type": "color", "$value": "{foundation.color.blue.900}", "$description": "Primary text color" },
        "secondary": { "$type": "color", "$value": "{foundation.color.gray.500}", "$description": "Secondary/muted text" },
        "inverse": { "$type": "color", "$value": "{foundation.color.white}", "$description": "Text on dark backgrounds" },
        "disabled": { "$type": "color", "$value": "{foundation.color.gray.400}", "$description": "Disabled text state" }
      },

      "surface": {
        "$type": "group",
        "background": { "$type": "color", "$value": "{foundation.color.blue.50}", "$description": "Main app background" },
        "card": { "$type": "color", "$value": "{foundation.color.white}", "$description": "Card/panel background" },
        "elevated": { "$type": "color", "$value": "{foundation.color.white}", "$description": "Elevated surfaces" }
      },

      "border": {
        "$type": "group",
        "default": { "$type": "color", "$value": "{foundation.color.gray.300}", "$description": "Default border color" },
        "subtle": { "$type": "color", "$value": "{foundation.color.gray.200}", "$description": "Subtle borders" },
        "strong": { "$type": "color", "$value": "{foundation.color.gray.400}", "$description": "Emphasized borders" }
      },

      "brand": {
        "$type": "group",
        "primary": { "$type": "color", "$value": "{foundation.color.blue.500}", "$description": "Primary brand color" },
        "primary-hover": { "$type": "color", "$value": "{foundation.color.blue.600}", "$description": "Brand color hover state" },
        "primary-subtle": { "$type": "color", "$value": "{foundation.color.blue.100}", "$description": "Subtle brand background" }
      },

      "feedback": {
        "$type": "group",
        "success": { "$type": "color", "$value": "{foundation.color.green.500}" },
        "warning": { "$type": "color", "$value": "{foundation.color.yellow.500}" },
        "error": { "$type": "color", "$value": "{foundation.color.red.500}" },
        "info": { "$type": "color", "$value": "{foundation.color.cyan.500}" }
      },

      "interactive": {
        "$type": "group",
        "default": { "$type": "color", "$value": "{foundation.color.blue.500}" },
        "hover": { "$type": "color", "$value": "{foundation.color.blue.600}" },
        "active": { "$type": "color", "$value": "{foundation.color.blue.700}" },
        "disabled": { "$type": "color", "$value": "{foundation.color.gray.300}" },
        "focus-ring": { "$type": "color", "$value": "{foundation.color.blue.500}" }
      }
    },

    "spacing": {
      "$type": "group",
      "touch-target-min": { "$type": "dimension", "$value": "{foundation.spacing.11}", "$description": "44px - Apple HIG minimum", "$extensions": { "swiftfill": { "value-px": "44px" } } },
      "section-gap": { "$type": "dimension", "$value": "{foundation.spacing.8}" },
      "card-padding": { "$type": "dimension", "$value": "{foundation.spacing.6}" },
      "inline-gap": { "$type": "dimension", "$value": "{foundation.spacing.4}" }
    },

    "typography": {
      "$type": "group",
      "heading-xl": {
        "$type": "typography",
        "$value": {
          "fontFamily": "Inter, -apple-system, sans-serif",
          "fontSize": "{foundation.font-size.4xl}",
          "fontWeight": "{foundation.font-weight.bold}",
          "lineHeight": "{foundation.line-height.tight}"
        }
      },
      "body": {
        "$type": "typography",
        "$value": {
          "fontFamily": "Inter, -apple-system, sans-serif",
          "fontSize": "{foundation.font-size.base}",
          "fontWeight": "{foundation.font-weight.normal}",
          "lineHeight": "{foundation.line-height.normal}"
        }
      },
      "caption": {
        "$type": "typography",
        "$value": {
          "fontFamily": "Inter, -apple-system, sans-serif",
          "fontSize": "{foundation.font-size.sm}",
          "fontWeight": "{foundation.font-weight.normal}",
          "lineHeight": "{foundation.line-height.normal}"
        }
      }
    },

    "elevation": {
      "$type": "group",
      "card": { "$type": "shadow", "$value": "{foundation.shadow.ultra-5layer}", "$description": "Standard card elevation" },
      "overlay": { "$type": "shadow", "$value": "{foundation.shadow.ultra-5layer}", "$description": "Modal/dialog elevation" }
    },

    "glass": {
      "$type": "group",
      "$description": "Liquid glass material system",
      "sidebar": { "$type": "dimension", "$value": "{foundation.blur.thin}" },
      "modal": { "$type": "dimension", "$value": "{foundation.blur.regular}" },
      "floating": { "$type": "dimension", "$value": "{foundation.blur.chrome}" }
    },

    "animation": {
      "$type": "group",
      "spring": {
        "$type": "transition",
        "$value": {
          "duration": "{foundation.duration.normal}",
          "timingFunction": "{foundation.cubic-bezier.spring}"
        }
      },
      "smooth": {
        "$type": "transition",
        "$value": {
          "duration": "{foundation.duration.normal}",
          "timingFunction": "{foundation.cubic-bezier.smooth}"
        }
      },
      "quick": {
        "$type": "transition",
        "$value": {
          "duration": "{foundation.duration.fast}",
          "timingFunction": "{foundation.cubic-bezier.snappy}"
        }
      }
    }
  },

  "component": {
    "$type": "group",
    "$description": "Tier 3: Component-specific tokens that reference alias tokens. These define the actual UI elements.",

    "button": {
      "$type": "group",

      "primary": {
        "$type": "group",
        "background": { "$type": "color", "$value": "{alias.color.brand.primary}" },
        "background-hover": { "$type": "color", "$value": "{alias.color.brand.primary-hover}" },
        "text": { "$type": "color", "$value": "{alias.color.text.inverse}" },
        "border-radius": { "$type": "dimension", "$value": "{foundation.border-radius.full}", "$description": "Pill shape (conscious design choice)" },
        "padding-x": { "$type": "dimension", "$value": "{foundation.spacing.6}" },
        "padding-y": { "$type": "dimension", "$value": "{foundation.spacing.2.5}" },
        "min-height": { "$type": "dimension", "$value": "{alias.spacing.touch-target-min}" },
        "shadow": { "$type": "shadow", "$value": "{alias.elevation.card}" },
        "font-weight": { "$type": "number", "$value": "{foundation.font-weight.bold}" }
      },

      "secondary": {
        "$type": "group",
        "background": { "$type": "color", "$value": "{foundation.color.gray.200}" },
        "background-hover": { "$type": "color", "$value": "{foundation.color.gray.300}" },
        "text": { "$type": "color", "$value": "{alias.color.text.primary}" },
        "border-radius": { "$type": "dimension", "$value": "{foundation.border-radius.full}" }
      },

      "destructive": {
        "$type": "group",
        "background": { "$type": "color", "$value": "{alias.color.feedback.error}" },
        "background-hover": { "$type": "color", "$value": "{foundation.color.red.600}" },
        "text": { "$type": "color", "$value": "{alias.color.text.inverse}" },
        "border-radius": { "$type": "dimension", "$value": "{foundation.border-radius.full}" }
      }
    },

    "card": {
      "$type": "group",
      "background": { "$type": "color", "$value": "{alias.color.surface.card}" },
      "border": { "$type": "color", "$value": "{alias.color.border.subtle}" },
      "border-radius": { "$type": "dimension", "$value": "{foundation.border-radius.lg}" },
      "padding": { "$type": "dimension", "$value": "{alias.spacing.card-padding}" },
      "shadow": { "$type": "shadow", "$value": "{alias.elevation.card}" }
    },

    "input": {
      "$type": "group",
      "background": { "$type": "color", "$value": "{alias.color.surface.background}" },
      "border": { "$type": "color", "$value": "{alias.color.border.default}" },
      "border-focus": { "$type": "color", "$value": "{alias.color.interactive.focus-ring}" },
      "border-radius": { "$type": "dimension", "$value": "{foundation.border-radius.md}" },
      "padding-x": { "$type": "dimension", "$value": "{foundation.spacing.4}" },
      "padding-y": { "$type": "dimension", "$value": "{foundation.spacing.2}" },
      "min-height": { "$type": "dimension", "$value": "{alias.spacing.touch-target-min}" },
      "text": { "$type": "color", "$value": "{alias.color.text.primary}" },
      "placeholder": { "$type": "color", "$value": "{alias.color.text.secondary}" }
    },

    "modal": {
      "$type": "group",
      "backdrop": { "$type": "color", "$value": "hsl(220, 18%, 8%, 0.8)" },
      "background": { "$type": "color", "$value": "{alias.color.surface.elevated}" },
      "border-radius": { "$type": "dimension", "$value": "{foundation.border-radius.2xl}" },
      "padding": { "$type": "dimension", "$value": "{foundation.spacing.8}" },
      "shadow": { "$type": "shadow", "$value": "{alias.elevation.overlay}" },
      "blur": { "$type": "dimension", "$value": "{alias.glass.modal}" }
    }
  }
}
